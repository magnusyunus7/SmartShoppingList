<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background"
    tools:context=".AddItemMenu">

    <TextView
        android:id="@+id/textViewAddAnItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginTop="118dp"
        android:layout_marginEnd="168dp"
        android:layout_marginBottom="594dp"
        android:text="Add an item"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:fontFamily="@font/antiqua"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextItemName"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="464dp"
        android:ems="5"
        android:fontFamily="@font/antiqua"
        android:hint="Item name"
        android:inputType="text"
        android:textColorHint="#808080"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAddAnItem"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextQuantity"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="206dp"
        android:layout_marginBottom="30dp"
        android:ems="4"
        android:fontFamily="@font/antiqua"
        android:hint="Quantity"
        android:inputType="number"
        android:textColorHint="#808080"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/spinnerCategory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAddAnItem" />

    <Spinner
        android:id="@+id/spinnerCategory"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="208dp"
        android:backgroundTint="@color/black"
        android:entries="@array/item_categories"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextQuantity" />

    <Button
        android:id="@+id/buttonSaveItem"
        android:layout_width="134dp"
        android:layout_height="58dp"
        android:layout_marginStart="138dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="138dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/antiqua"
        android:text="Save Item"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonCancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerCategory" />

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="134dp"
        android:layout_height="58dp"
        android:layout_marginStart="138dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="138dp"
        android:layout_marginBottom="102dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/antiqua"
        android:text="Cancel"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSaveItem" />

</androidx.constraintlayout.widget.ConstraintLayout>