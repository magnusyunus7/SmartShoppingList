<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background"
    tools:context=".OptionsListMenu">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="177dp"
        android:layout_marginBottom="610dp"
        android:text="What are we \ndoing today?"
        android:textSize="45sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/antiqua"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonViewCart"
        android:layout_width="148dp"
        android:layout_height="65dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/antiqua"
        android:text="View Cart"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonAddItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/buttonFavourites"
        android:layout_width="115dp"
        android:layout_height="65dp"
        android:layout_marginStart="145dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/antiqua"
        android:text="History"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAddItem" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="125dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/antiqua"
        android:text="Back"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonFavourites" />

    <Button
        android:id="@+id/buttonAddItem"
        android:layout_width="135dp"
        android:layout_height="65dp"
        android:layout_marginStart="146dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="146dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/antiqua"
        android:text="Add Item"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonFavourites"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonViewCart" />
</androidx.constraintlayout.widget.ConstraintLayout>